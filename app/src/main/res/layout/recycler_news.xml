<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_height">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vImageViewRow"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginLeft="@dimen/spacing_large"
        fresco:actualImageScaleType="centerCrop"
        fresco:failureImageScaleType="center"
        fresco:placeholderImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/vText_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/font_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium_extra"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/vText_description"
        app:layout_constraintLeft_toRightOf="@id/vImageViewRow"
        app:layout_constraintRight_toLeftOf="@id/vText_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="@string/Recycler_News_title" />

    <TextView
        android:id="@+id/vText_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:ellipsize="end"
        android:maxLength="100"
        android:maxLines="2"
        android:scrollHorizontally="false"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vImageViewRow"
        app:layout_constraintRight_toLeftOf="@id/vText_time"
        app:layout_constraintTop_toBottomOf="@id/vText_title"
        tools:ignore="MissingConstraints"
        tools:text="@string/Recycler_News_description" />

    <TextView
        android:id="@+id/vText_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_medium"
        android:layout_marginRight="@dimen/font_medium"
        android:layout_marginTop="@dimen/font_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/vlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_like_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vText_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vText_time"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>