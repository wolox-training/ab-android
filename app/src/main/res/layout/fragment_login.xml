<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/image_view_height"
        android:foreground="@drawable/gradient"
        android:scaleType="centerCrop"
        android:src="@drawable/login_cover"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/wolox_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wolox_logo_large"
        app:layout_constraintBottom_toBottomOf="@id/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:alpha="0"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/background" />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:hint="Email"
        android:paddingBottom="@dimen/font_medium_extra"
        android:textSize="@dimen/font_medium_extra"
        app:layout_constraintTop_toBottomOf="@id/white" />

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:hint="Password"
        android:paddingBottom="@dimen/font_medium_extra"
        android:password="true"
        android:textSize="@dimen/font_medium_extra"
        app:layout_constraintTop_toBottomOf="@id/edittext_email" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin"
        android:background="@color/white"
        android:shadowColor="@color/grey"
        android:text="LOG IN"
        android:textSize="@dimen/font_medium_extra"
        app:layout_constraintTop_toBottomOf="@id/edittext_password" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin"
        android:background="@color/lightblue"
        android:shadowColor="@color/black"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium_extra"
        app:layout_constraintTop_toBottomOf="@id/login_button" />

    <TextView
        android:id="@+id/terms_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:gravity="center"
        android:text="@string/terms"
        android:textSize="@dimen/font_medium_extra"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>